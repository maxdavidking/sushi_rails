<!DOCTYPE html>
<html>
<head>
  <title>FetchCounter</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= favicon_link_tag 'favicon.png' %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <nav class="navbar sticky-top navbar-expand-md navbar-dark bg-dark">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <div class="navbar-nav">
        <% if signed_in? %>
        <div class="nav-item nav-link <%= 'active' if current_page?(sushi_index_path) %>"><%= link_to 'Connections', sushi_index_path %></div>
        <div class="nav-item nav-link <%= 'active' if current_page?(new_sushi_path) %>"><%= link_to 'New Connection', new_sushi_path %></div>
        <div class="nav-item nav-link <%= 'active' if current_page?(validsushi_path) %>"><%= link_to 'Import Connections', validsushi_path %></div>
        <div class="nav-item nav-link <%= 'active' if current_page?(user_index_path) %>"><%= link_to 'Settings', user_index_path %></div>
        <div class="nav-item nav-link <%= 'active' if current_page?(contact_path) %>"><%= link_to 'About', {:controller => :about, :action => :contact} %></div>
        <div class="nav-item nav-link "><%= link_to 'Log Out', logout_path, method: :delete %></div>
        <% else %>
        <div class="nav-item nav-link"><%= link_to 'Login', '/auth/google' %></div>
        <% end %>
      </div>
    </div>
    <div class="spinner">
      <div class="bounce1"></div>
      <div class="bounce2"></div>
      <div class="bounce3"></div>
    </div>
    <div class="navbar-brand"><%= link_to 'FetchCounter', root_path %> </div>
</nav>
  <div class="row">
    <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
    <% end %>
  </div>
  <div class="container">
    <%= yield %>
  </div>
  <footer class="container-fluid">
    <nav class="navbar bg-white fixed-bottom">
      <div class="nav-item">&copy; FetchCounter.com</div>
    </nav>
  </footer>
</body>
</html>
