<% if @response.blank? %>
<div id="product-modal" class="modal fade"></div>
  <div class="row">
    <div class="alert alert-danger">
      <h2> Failure, check your connection info:</h2>
      <h2> <%= truncate(@error.to_s, length: 300) %> </h2>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-1">
      <h6>Database Name</h6>
    </div>
    <div class="col-lg-2">
      <h6>Endpoint</h6>
    </div>
    <div class="col-lg-2">
      <h6>Customer ID</h6>
    </div>
    <div class="col-lg-2">
      <h6>Requestor ID</h6>
    </div>
    <div class="col-lg-1">
      <h6>Report Start</h6>
    </div>
    <div class="col-lg-1">
      <h6>Report End</h6>
    </div>
    <div class="col-lg-1">
      <h6>Password</h6>
    </div>
    <div class="col-lg-2">
      <h6>Actions</h6>
    </div>
  </div>
  <div class="row data">
    <div class="col-lg-1">
      <p><%= @sushi.name %></p>
    </div>
    <div class="col-lg-2">
      <p><%= @sushi.endpoint %></p>
    </div>
    <div class="col-lg-2">
      <p><%= @sushi.cust_id %></p>
    </div>
    <div class="col-lg-2">
      <p><%= @sushi.req_id %></p>
    </div>
    <div class="col-lg-1">
      <p><%= @sushi.report_start %></p>
    </div>
    <div class="col-lg-1">
      <p><%= @sushi.report_end %></p>
    </div>
    <div class="col-lg-1">
      <p><%= @sushi.password %></p>
    </div>
    <div class="col-lg-2">
      <%= link_to 'Get CSV Report', {:controller => :sushi, :action => :call, :id => (@sushi.id), :format => "csv"}, class: 'btn btn-primary btn-sm'%>
      <%= link_to 'Test Connection', {:controller => :sushi, :action => :test, :id => (@sushi.id)}, class: 'btn btn-primary btn-sm'%>
      <%= link_to 'Edit', edit_sushi_path(@sushi), remote: true, class: 'btn btn-primary btn-sm' %>
      <%= button_to 'Delete', sushi_path(@sushi.id), method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: "Are you sure?"} %>
    </div>
  </div>
  <% else %>
  <div class="row">
    <div class="alert alert-success">
      <h2> <%= @sushi.name %> Connection: Success </h2>
    </div>
  </div>
  <div class="row">
    <%= link_to 'Get Counter Report', {:controller => :sushi, :action => :call, :id => (@sushi.id), :format => "csv"}, class: 'btn btn-primary btn-sm'%>
  </div>
  <% end %>
  <div class="row">
  <%= link_to "Back", sushi_index_path, class: 'btn btn-danger btn-sm' %>
</div>
