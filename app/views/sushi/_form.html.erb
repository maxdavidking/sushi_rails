<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @sushi, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <div class="error"> </div>

        <div class="form-group">
          <%= f.label :name, "Name", class: "required" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :endpoint, "Endpoint", class: "required" %>
          <%= f.text_field :endpoint, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :customer_id, "Customer ID", class: "required" %>
          <%= f.text_field :cust_id, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :req_id, "Requestor ID"%>
          <%= f.text_field :req_id, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :report_start, "Report Start", class: "required" %>
          <%= f.text_field :report_start, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :report_end, "Report End", class: "required" %>
          <%= f.text_field :report_end, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password, "Password" %>
          <%= f.text_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Update", class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn btn-danger", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
