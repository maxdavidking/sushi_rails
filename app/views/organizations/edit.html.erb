<div class="row">
  <h3> Edit Organization </h3>
</div>

  <%= form_for (@organization) do |f| %>
    <div class="form-group">
      <%= f.label :name, "Update Name", class: "required" %>
      <%= f.text_field :name, class: "form-control", autofocus: true, required: true %>
    </div>
    <div class='form-group'>
      <%= f.label :password, "Update Password", class: "required" %>
      <%= f.text_field :password, class: "form-control", type: "password"%>
    </div>
    <div class='form-group'>
      <%= f.label :email, "Update Email", class: "required" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class='form-group'>
      <%= f.submit "Update", class: 'btn btn-primary btn-sm' %>
    </div>
<% end %>
