<div class="row">
  <h3>Join Organization</h3>
</div>
<% if signed_in? %>
  <div class="row data">
    <%= form_for (@organization), :url => url_for(:controller => 'organizations', :action => 'add_org_to_user') do |f| %>
    <div class='form-group'>
      <%= f.label :name, "Name", class: "required" %>
      <%= f.text_field :name, class: "form-control"  %>
    </div>
    <div class='form-group'>
      <%= f.label :password, "Password", class: "required" %>
      <%= f.text_field :password, value: nil, class: "form-control", type: "password", autofocus: true, required: true %>
    </div>
    <div class='form-group'>
      <%= f.submit "Confirm", class: 'btn btn-primary btn-sm' %>
    </div>
    <% end %>
  </div>
<% else %>
  <div class="jumbotron text-center">
    <h3>FetchCounter</h3>
    <p>Login with <%= link_to 'Google', '/auth/google', class: "text-secondary" %> to get started</p>
    <p>Set up COUNTER connections with SUSHI to quickly download COUNTER reports.</p>
  </div>
<% end %>
